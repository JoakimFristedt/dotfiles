alias ..="cd .."
alias ...='cd ../../'
alias .3='cd ../../../'
alias ~='cd ~'

alias c=clear

alias rmr='rm -ri'

alias ll='ls -ll'
alias la='ls -al'

alias cp='cp -iv'
alias mv='mv -iv'
alias mkdir='mkdir -pv'

alias grep="grep --color=auto"
alias egrep="egrep --color=auto"
alias cpwd="pwd | tr -d '\n' | pbcopy"

alias openPorts='sudo lsof -i | grep LISTEN'
